# GPU Compute Platform Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, production, testing)
ENVIRONMENT=development

# Application secret key (generate a secure random string for production)
SECRET_KEY=dev-secret-key-change-in-production

# Debug mode (true for development, false for production)
DEBUG=true

# App version
VERSION=0.1.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - SQLite for development, PostgreSQL for production
# SQLite: sqlite+aiosqlite:///./gpu_platform.db
# PostgreSQL: postgresql://postgres:postgres@postgres:5432/gpu_platform
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/gpu_platform

# =============================================================================
# REDIS AND CELERY CONFIGURATION
# =============================================================================

# Redis URL for caching and task queue
REDIS_URL=redis://redis:6379/0

# Celery broker and result backend
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================

# MLflow tracking URI
MLFLOW_TRACKING_URI=http://mlflow:5000

# MLflow experiment name
MLFLOW_EXPERIMENT_NAME=gpu-compute-platform

# MLflow artifact location
MLFLOW_ARTIFACT_LOCATION=./mlruns

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT algorithm
ALGORITHM=HS256

# =============================================================================
# GPU PROVIDER CONFIGURATIONS
# =============================================================================

# Alibaba Cloud Configuration
ALIBABA_ACCESS_KEY_ID=your_alibaba_access_key
ALIBABA_ACCESS_KEY_SECRET=your_alibaba_secret_key
ALIBABA_REGION_ID=cn-hangzhou
ALIBABA_SECURITY_GROUP_ID=sg-xxxxxxxxx
ALIBABA_VSWITCH_ID=vsw-xxxxxxxxx
ALIBABA_KEY_PAIR_NAME=gpu-compute-keypair

# Tencent Cloud Configuration
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_REGION=ap-shanghai
TENCENT_CLUSTER_ID=cls-xxxxxx
TENCENT_KUBECONFIG=base64_encoded_kubeconfig

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT_ID=your_endpoint_id

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Python path for development
PYTHONPATH=/app

# Disable Python bytecode generation for development
PYTHONDONTWRITEBYTECODE=1

# Force Python output to be unbuffered
PYTHONUNBUFFERED=1

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================

# Prometheus endpoint
PROMETHEUS_ENDPOINT=http://prometheus:9090

# Grafana admin password
GF_SECURITY_ADMIN_PASSWORD=admin

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API base URL for frontend
VITE_API_BASE_URL=http://localhost:8000

# Node environment
NODE_ENV=development
